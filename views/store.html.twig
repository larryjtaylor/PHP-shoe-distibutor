<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Stores</title>
  </head>
  <body>
      <div class="jumbotron">
          <h1>Shoes and Such</h1>
      </div>
      <div class="container">
        <h1>{{ store.getStoreName }}</h1>

        <p><a href="/stores/{{ store.getId }}/edit">Edit this store</a></p>

        <h4>Add a brand to this store:</h4>

        <form action='/add_brands' method='post'>
            <input type="hidden" name="store_id" value="{{ store.getId }}">
            <label for='brand_name'>Select a Brand</label>
            <select id='brand_name' name='brand_name' type='text'><br>
              {% for brand in all_brands %}
                <option value="{{ brand.getId }}"> {{ brand.getBrandName }} </option>
              {% endfor %}
          </select>

            <button type='submit' class="btn btn-info">Add brand</button>
        </form>

        <p><a href="/stores">Back to Stores</a></p>
        <p><a href='/'>Home</a></p>
    </div>
  </body>
</html>
