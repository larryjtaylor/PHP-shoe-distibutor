<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Edit Store</title>
  </head>
  <body>
    <h1>Change {{ store.getStoreName }}'s name </h1>

    <form action="/stores/{{ store.getId }}" method="post">
      <input name="_method" type="hidden" value="patch">

      <label for="store_name">Rename your store:</label>
      <input id="store_name" name="store_name" type="text">

      <button type="submit">Update</button>
    </form>
    <form action="/stores/{{ store.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">

      <button type="submit">Remove this store</button>
    </form>
  </body>
</html>
