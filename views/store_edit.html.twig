<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <title>Edit Store</title>
    </head>
    <body>
        <div class="jumbotron">
            <h1>Shoes and Such</h1>
        </div>
        <div class="container">
            <h1>Change {{ store.getStoreName }}'s name </h1>

            <form action="/stores/{{ store.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">

                <label for="store_name">Rename your store:</label>
                <input id="store_name" name="store_name" type="text">

                <button type="submit" class="btn-success">Update</button>
            </form>
            <form action="/stores/{{ store.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit" class="btn-danger">Remove this store</button>
            </form>
            <p><a href="/stores">Back to Stores</a></p>
        </div>
    </body>
</html>
